<header class="navbar navbar-fixed-top navbar-default">
  <div class="container-fluid">
    <%= link_to "Rig", root_path, id: "logo" %>
    <nav class="navbar-right">
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if admin_user? %>
            <li><%= link_to "Pending", posts_pending_path %></li>
            <li><%= link_to "Users", users_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Edit", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class='btn-login'>
            <%= form_for(:session, url: login_path) do |f| %>
              <%= f.hidden_field :email, value: 'admin@rig.org' %>
              <%= f.hidden_field :password, value: 'password' %>
              <%= f.submit "Log in as admin", class: 'btn btn-primary' %>
            <% end %>
          </li>
          <li><%= link_to "Sign up", signup_path %></li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
